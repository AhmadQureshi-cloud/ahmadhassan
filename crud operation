    public partial class student : Form
    {
        SqlConnection con = new SqlConnection(@"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=E:\CSharp\Windows Form\SLF form\Datacreate.mdf;Integrated Security=True;Connect Timeout=30");
        
        public student()
        {
            InitializeComponent();
        }

        private void Button1_Click(object sender, EventArgs e)
        {
            try
            {
                con.Open();
                SqlCommand cmd = con.CreateCommand();
                cmd.CommandType = CommandType.Text;
                cmd.CommandText = "insert into CRUD values ('" + fn.Text + "','" + ln.Text + "','" + address.Text + "','" + pn.Text + "','" + city.Text + "','" + age.Text + "')";

                cmd.ExecuteNonQuery();
                con.Close();    
                fn.Text = "";
                ln.Text = "";
                address.Text = "";
                pn.Text = "";
                city.Text = "";
                age.Text = "";
                disp();
            }
            catch (Exception exp)
            {
                MessageBox.Show("Record Insert Successfully",exp.Message);

            }
            
        }
        public void disp()
        {
                con.Open();
                SqlCommand cmd = con.CreateCommand();
                cmd.CommandType = CommandType.Text;
                cmd.CommandText = "Select * from CRUD";
                cmd.ExecuteNonQuery();
                DataTable dt = new DataTable();
                SqlDataAdapter sda = new SqlDataAdapter(cmd);
                sda.Fill(dt);
                dataGridView1.DataSource = dt;
                con.Close();
        }
        
        private void DataGridView1_CellContentClick(object sender, DataGridViewCellEventArgs e)
        {

        }

        private void Student_Load(object sender, EventArgs e)
        {
            disp();
        }

        private void Button3_Click(object sender, EventArgs e)
        {
            con.Open();
            SqlCommand cmd = con.CreateCommand();
            cmd.CommandType = CommandType.Text;
            cmd.CommandText = "delete from CRUD where FirstName ='" + fn.Text + "'"; /*+ ln.Text + "','" + address.Text + "','" + pn.Text + "','" + city.Text + "','" + age.Text + "'";*/
            cmd.ExecuteNonQuery();
            con.Close();
            fn.Text = "";
            ln.Text = "";
            address.Text = "";
            pn.Text = "";
            city.Text = "";
            age.Text = "";
            disp();
            MessageBox.Show("Record Delete Successfully");
        }

        private void Button4_Click(object sender, EventArgs e)
        {
            con.Open();
            SqlCommand cmd = con.CreateCommand();
            cmd.CommandType = CommandType.Text;
            //cmd.CommandText = "update CRUD set FirstName ='" + fn.Text + "',LastName ='" + ln.Text + "',Address ='" + address.Text + "',PhoneNumber ='" + pn.Text + "',City ='" + city.Text + "',Age ='" + age.Text + "' Where FirstName='" + ln.Text+"'"; /*+ ln.Text + "','" + address.Text + "','" + pn.Text + "','" + city.Text + "','" + age.Text + "'";*/
            cmd.CommandText = ("Update CRUD set FirstName=@a1,LastName=@a2,Address=@a3,PhoneNumber=@a4,City=@a5,Age=@a6");
            cmd.Parameters.Add("a1",fn.Text);
            cmd.Parameters.Add("a2", ln.Text);
            cmd.Parameters.Add("a3", address.Text);
            cmd.Parameters.Add("a4", pn.Text);
            cmd.Parameters.Add("a5", city.Text);
            cmd.Parameters.Add("a6", age.Text);

            cmd.ExecuteNonQuery();
            con.Close();
            fn.Text = "";
            ln.Text = "";
            address.Text = "";
            pn.Text = "";
            city.Text = "";
            age.Text = "";
            disp();
            MessageBox.Show("Record Update Successfully");
        }

        private void Button2_Click(object sender, EventArgs e)
        {
            con.Open();
            SqlCommand cmd = con.CreateCommand();
            cmd.CommandType = CommandType.Text;
            cmd.CommandText = "select * from CRUD where FirstName = '" + fn.Text + "'";
            cmd.ExecuteNonQuery();
            DataTable dt = new DataTable();
            SqlDataAdapter sda = new SqlDataAdapter(cmd);
            sda.Fill(dt);
            dataGridView1.DataSource = dt;
            con.Close();
            fn.Text = "";
            //disp();

        }

